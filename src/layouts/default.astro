---
import Navbar from "../components/organisms/Navbar.astro";
import Footer from "../components/organisms/Footer.astro";
import Header from "./header.astro";

import { CommandPalette } from "../components/molecules/CommandPalette";

const SITE = {
  title: "Phil Denhoff",
};

const { content } = Astro.props;
const pageTitle = content?.title !== undefined
  ? `${content.title} Â· ${SITE.title}`
  : SITE.title;
---

<!DOCTYPE html>
<html lang="en">
  <Header pageTitle={pageTitle}></Header>
  <body>
    <CommandPalette client:only="solid-js"/>
    <Navbar />
    <main>
      <div class="central-column">
        <slot />
      </div>
    </main>
    <Footer />
  </body>
</html>

<style>
  main {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
  }

  .central-column {
    display: flex;
    flex-direction: column;
    width: 100%;
    padding: 10vw;
  }

  @media only screen and (min-width: 768px) {
    .central-column {
      width: 80ch;
      padding: 0;
    }
  }
</style>
